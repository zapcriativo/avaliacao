@model List<DomainProduct.Entities.Group>
@if (Model.Any())
{
    <div class="column">
        <div class="ui segment orange">
            <div class="ui list">
                @if (Model != null)
                {
                    foreach (var group in Model)
                    {
                        <a class="item" href="@group.UrlFriendly">@group.Name</a>
                    }
                }
            </div>
        </div>
    </div>
}