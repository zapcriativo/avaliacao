
<div class="active title">Preço<i class="dropdown icon"></i></div>
<div class="active content">
    <div class="ui form">
        <div class="inline three fields nowrap">
            <div class="seven wide field">
                <div class="ui input left icon fluid">
                    <i class="dollar icon"></i>
                    <input type="text" name="initialPrice" id="initialPrice" placeholder="Min">
                </div>
            </div>

            <div class="seven wide field">
                <div class="ui input left icon fluid">
                    <i class="dollar icon"></i>
                    <input type="text" name="finalPrice" id="finalPrice" placeholder="Max">
                </div>
            </div>
            <div class="two wide field">
                <button class="ui teal icon button pricefilter">
                    <i class="check icon"></i>
                </button>
            </div>
        </div>
    </div>
</div>

<script>
    $("#initialPrice, #finalPrice").inputmask('decimal', {
        radixPoint: ",",
        groupSeparator: ".",
        autoGroup: true,
        digits: 2,
        digitsOptional: false,
        placeholder: '0',
        rightAlign: false,
        onBeforeMask: function (value, opts) {
            return value;
        }
    });
</script>