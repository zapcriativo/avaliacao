@model DomainProduct.Result
<div class="ui divider hidden"></div>
<div class="ui container listResult type-list">
    <div class="ui divided items relaxed">
        @if (Model != null && Model.Products.Count() > 0)
        {
            foreach (var product in Model.Products)
            {
                <!-- Page: ~/Views/Shared/Object/Product/_ProductInList.cshtml -->
                @Html.Partial("~/Views/Shared/Object/Product/_ProductInListEvents.cshtml", product)
            }
        }
        else
        {
            <div class="row">Nenhum produto encontrado nesta categoria!</div>
        }
    </div>
    
    @if (Model.Settings.PageCount > 1)
    {
        <div class="ui centered grid ">
            <div class="row">
                <div class="center aligned column">
                    <!-- Page: ~/Views/Shared/Parts/_Pagination.cshtml -->
                    @Html.Partial("~/Views/Shared/Parts/_Pagination.cshtml", Model.Settings, new ViewDataDictionary() { { "Url", ViewBag.localUrl } })
                </div>
            </div>
        </div>
    }
</div>